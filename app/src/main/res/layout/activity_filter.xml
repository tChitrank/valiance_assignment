<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Locality"/>
        <Button
            android:id="@+id/radius"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Radius"/>
        <Button
            android:id="@+id/ratings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ratings"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/localcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#90c0e8">
        <LinearLayout
            android:id="@+id/layout39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_tv"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:text="Sector 39"/>
            <ImageButton
                android:id="@+id/sector39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_tv"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:text="Sector 62"/>
            <ImageButton
                android:id="@+id/sector62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/radiuscv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#90c0e8">
            <CheckBox
                android:id="@+id/km1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Within 1km"/>
            <CheckBox
                android:id="@+id/km2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Within 2km"/>
            <CheckBox
                android:id="@+id/km3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Within 3km"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ratingscv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#90c0e8">
            <CheckBox
                android:id="@+id/rated5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 star rated"/>
            <CheckBox
                android:id="@+id/rated4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 star rated"/>
            <CheckBox
                android:id="@+id/rated3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 star rated"/>
            <CheckBox
                android:id="@+id/rated2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 star rated"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#20202e"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preferred Location"
        android:layout_margin="8dp"/>
</LinearLayout>